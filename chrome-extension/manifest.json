{
  "manifest_version": 3,
  "name": "URL Nexus Engine",
  "version": "5.0.0",
  "description": "The silent browser companion for URL Nexus.",
  "permissions": ["storage", "activeTab", "scripting", "notifications"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "popup/popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content_script.js"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
